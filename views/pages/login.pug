extends ./../layouts/header.pug


block title 
        title= title 

block css
        link(rel="stylesheet", href="/css/login.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css")

block jsScript 
        script(src='/js/login.js' defer)



block body 
    .wrapper 
        .login-wrapper
                h2 Login 
                
                form(action="/login",method="post")
                        //- for username
                        div(class="login" )
                                label(for="username")
                                        b Username 
                                input#username(type="text" class="from-control" placeholder="Enter Your username or email" name="username", value=user.username)
                        if error.username
                                p.error #{error.username.msg}
                   


                        //- for password
                        div(class="login")
                                label(for="password")
                                        b Password  
                                .logPassContainer 
                                        input#password(type="password" ,class="from-control" placeholder="Enter Your password" name="password", value=error.password ? "": user.password )
                                        span#passwordIcon 
                                                i.fas.fa-eye 
                        if error.password
                                p.error #{error.password.msg}

                        //- submit
                        input(type="submit" ,class="from-control" value="Login")
                
                //- link
                p New User?
                        a(href="/register") Register Here
                p Forget password?
                        a(href="/resetPassword") Click Here